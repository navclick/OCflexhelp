<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/underline"
        android:orientation="horizontal"
        android:paddingBottom="25dp"
        android:paddingTop="25dp"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_service_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Customized Errands"
                    android:textColor="@color/midGrey" />

                <TextView
                    android:id="@+id/txt_service_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="19/05/2017"
                    android:textColor="@color/lightGrey" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Job Time"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center|end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_view"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/border_primary_color"
                android:text="View"
                android:textColor="@drawable/btn_txt_primary_color" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>